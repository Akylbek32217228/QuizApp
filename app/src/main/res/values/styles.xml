<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="m">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
    
    <style name="CardViewStyle" parent="Theme.AppCompat.Light" >
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">24dp</item>
        <item name="contentPaddingTop">24dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>

    <style name="TitleText" parent="AppTheme.BoldText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="GreyAccent">
        <item name="colorAccent">@color/light_grey</item>
        <item name="colorPrimary">@color/light_grey</item>
    </style>

    <style name="AppTheme.HintText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:fontFamily">@font/san_francisco</item>
    </style>
    
    <style name="AppTheme.CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar_horizontal</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="AppTheme.QuizCategory">
        <item name="android:fontFamily">@font/san_francisco</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_purple</item>
    </style>

    <style name="AppTheme.LaunchScreen">

    </style>

    <style name="AppTheme.BoldText">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="AppTheme.RegularText">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.SemiboldText">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.LightText">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
