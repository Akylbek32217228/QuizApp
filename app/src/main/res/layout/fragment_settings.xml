<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.settings.SettingsFragment">

    <TextView
        android:theme="@style/TitleText"
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Settings"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dark_purple"
        app:layout_constraintTop_toTopOf="@+id/settings_share_this_app"/>

    <TextView
        android:id="@+id/settings_share_this_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/settings_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="20dp"
        android:text="Share this app"
        android:fontFamily="sans-serif-black"
        android:background="?selectableItemBackground"
        android:textColor="@color/dark_purple"
        android:clickable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dark_purple"
        app:layout_constraintBottom_toBottomOf="@+id/settings_share_this_app"/>

    <TextView
        android:id="@+id/settings_rate_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate us"
        android:padding="20dp"
        android:fontFamily="sans-serif-black"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:textColor="@color/dark_purple"
        app:layout_constraintTop_toBottomOf="@id/settings_share_this_app"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dark_purple"
        app:layout_constraintTop_toBottomOf="@id/settings_rate_us"/>

    <TextView
        android:id="@+id/settings_leave_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/settings_rate_us"
        android:text="Leave feedback"
        android:padding="20dp"
        android:fontFamily="sans-serif-black"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:textColor="@color/dark_purple"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dark_purple"
        app:layout_constraintTop_toBottomOf="@id/settings_leave_feedback"/>

    <TextView
        android:id="@+id/settings_clear_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/settings_leave_feedback"
        android:text="Clear history"
        android:padding="20dp"
        android:fontFamily="sans-serif-black"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:textColor="@color/purple"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dark_purple"
        app:layout_constraintTop_toBottomOf="@id/settings_clear_history"/>

    <ImageView
        android:src="@drawable/ic_vector_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_title"
        android:padding="20dp"/>

    <ImageView
        android:src="@drawable/ic_vector_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_share_this_app"
        android:padding="20dp"/>

    <ImageView
        android:src="@drawable/ic_vector_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_rate_us"
        android:padding="20dp"/>

    <ImageView
        android:src="@drawable/ic_vector_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_leave_feedback"
        android:padding="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>
